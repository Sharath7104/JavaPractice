package jdbcConnection;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Scanner;

public class ConnectionToDatabasesDay2 {
	static boolean updateStudent(Scanner sc) {
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			System.out.println("Driver not found check for jar file");
			return false;
		}
		
		
		System.out.println("Name");
		String name = sc.next();
		System.out.println("Email");
		String email = sc.next();
		System.out.println("X_per");
		Double x_per = sc.nextDouble();
		System.out.println("State");
		String state = sc.next();
		
		
		String url = "jdbc:mysql://localhost/demo";
		String username = "root";
		String password = "root";
		
		String updateStatement = "UPDATE STUDENT SET NAME = ?, EMAIL = ?, X_PER = ?,STATE = ?";
		
		
		try(Connection conn = DriverManager.getConnection(url,username,password)){
			System.out.println("Connection Successfull");
			PreparedStatement ps = conn.prepareStatement(updateStatement);
			ps.setString(2, name);
			ps.setString(3, email);
			ps.setDouble(4, x_per);
			ps.setString(5, state);
			System.out.println(ps);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
		
	}
	
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int choice;
		System.out.println("Enter Selection \n 1.Add Student\n 2.Update Student\n 3.Delete Student");
		choice = sc.nextInt();
		if(choice == 2) {
			updateStudent(sc);
		}else if(choice ==3) {
			
		}else {
			System.out.println("Invalid Selection");
		}
		 sc.close();
	}
}
